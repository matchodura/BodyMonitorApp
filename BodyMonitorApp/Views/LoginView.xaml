<UserControl x:Class="BodyMonitorApp.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BodyMonitorApp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    <Grid  Background="LightSalmon" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>


        <DockPanel Grid.Column="1"  Margin="20">
            
        <DockPanel DockPanel.Dock="Top">
            <Grid ContextMenuClosing="Grid_ContextMenuClosing">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>

            <TextBlock Margin="10,2" DockPanel.Dock="Left" Text="Login" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0"/>
            <TextBox Margin="10,2" Width="50" VerticalAlignment="Center" Text="{Binding Path=UserLogin, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2"/>

            <TextBlock Margin="10,2" DockPanel.Dock="Left" Text="Hasło" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>

             <TextBox Margin="10,2" Width="50" VerticalAlignment="Center" Text="{Binding Path=UserPassword, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"/>


                    <Button Content="Login" DockPanel.Dock="Right" Margin="10,2" VerticalAlignment="Center" IsDefault="True"  
                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.LoginUserCommand}" 
                    Width="100" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"/>
                   
            <Button Content="Create Account" DockPanel.Dock="Right" Margin="10,2" VerticalAlignment="Center"
                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.CreateAccountSwitchPageCommand}"
                    Width="100" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2"/>
          
            <Button Content="Forgot Password" DockPanel.Dock="Right" Margin="10,2" VerticalAlignment="Center"
                        Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.ForgotPasswordSwitchPageCommand}" 
                        Width="100" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2"/>

             </Grid>
            
        </DockPanel>

        
        </DockPanel>
    </Grid>
</UserControl>
